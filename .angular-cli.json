{
    "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
    "project": {
        "name": "Jigsaw"
    },
    "apps": [
        {
            "root": "src",
            "outDir": "dist",
            "assets": [
                "assets",
                "jigsaw/assets",
                "favicon.ico"
            ],
            "index": "index.html",
            "main": "main.ts",
            "polyfills": "polyfills.ts",
            "test": "test.ts",
            "tsconfig": "tsconfig.app.json",
            "testTsconfig": "tsconfig.spec.json",
            "prefix": "app",
            "styles": [
                "../node_modules/bootstrap/dist/css/bootstrap.min.css",
                "../node_modules/eonasdan-bootstrap-datetimepicker/build/css/bootstrap-datetimepicker.min.css",
                "../node_modules/font-awesome/css/font-awesome.min.css",
                "../node_modules/ztree/css/zTreeStyle/zTreeStyle.css",
                "../node_modules/perfect-scrollbar/css/perfect-scrollbar.css",
                "../node_modules/@rdkmaster/icon-font/css/iconfont.css",
                "../node_modules/codemirror/lib/codemirror.css",
                "../node_modules/codemirror/theme/mbo.css",
                "styles.scss"
            ],
            "scripts": [
                "../node_modules/echarts/dist/echarts.min.js",
                "../node_modules/jquery/dist/jquery.min.js",
                "../node_modules/moment/min/moment.min.js",
                "../node_modules/bootstrap/dist/js/bootstrap.min.js",
                "../node_modules/ztree/js/jquery.ztree.all.js",
                "../node_modules/eonasdan-bootstrap-datetimepicker/build/js/bootstrap-datetimepicker.min.js",
                "../node_modules/peity/jquery.peity.min.js",
                "../node_modules/codemirror/lib/codemirror.js",
                "../node_modules/codemirror/mode/javascript/javascript.js",
                "../node_modules/codemirror/mode/css/css.js",
                "../node_modules/codemirror/mode/sass/sass.js",
                "../node_modules/codemirror/mode/xml/xml.js",
                "../node_modules/codemirror/addon/edit/matchbrackets.js"
            ],
            "environmentSource": "environments/environment.ts",
            "environments": {
                "dev": "environments/environment.ts",
                "prod": "environments/environment.prod.ts"
            }
        }
    ],
    "e2e": {
        "protractor": {
            "config": "./protractor-config-for-components.js"
        }
    },
    "lint": [
        {
            "project": "src/tsconfig.app.json"
        },
        {
            "project": "src/tsconfig.spec.json"
        },
        {
            "project": "e2e/tsconfig.e2e.json"
        }
    ],
    "test": {
        "karma": {
            "config": "./karma.conf.js"
        }
    },
    "defaults": {
        "styleExt": "css",
        "component": {}
    }
}
