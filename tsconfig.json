{
    "compileOnSave": false,
    "compilerOptions": {
        "importHelpers": true,
        "module": "esNext",
        "outDir": "./dist/out-tsc",
        "baseUrl": "src",
        "sourceMap": true,
        "declaration": false,
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "target": "es2015",
        "typeRoots": [
            "node_modules/@types",
            "src/jigsaw/typings.d.ts"
        ],
        "lib": [
            "es2016",
            "dom"
        ],
        "paths": {
            "jigsaw": [
                "dist/jigsaw"
            ],
            "jigsaw/*": [
                "dist/jigsaw/*"
            ]
        }
    },
    "include": ["./**/*.d.ts"],
    "preserveWhitespaces": {
        "preserveWhitespaces": "off"
    }
}
